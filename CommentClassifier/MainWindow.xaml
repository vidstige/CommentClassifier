<Window x:Class="CommentClassifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBox Text="{Binding FolderPath}" />
            <Button Command="{Binding Scan}">Scan</Button>
            <Button Command="{Binding Save}">Save</Button>
            <Button Command="{Binding Load}">Load</Button>
            <ProgressBar Height="20" Minimum="0" Maximum="{Binding TotalComments, Mode=OneWay}" Value="{Binding CommentsClassified, Mode=OneWay}" />
        </StackPanel>
        
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button Command="{Binding ClassifyAs}" CommandParameter="comment">Comment</Button>
            <Button Command="{Binding ClassifyAs}" CommandParameter="block_end">Block end</Button>
            <Button Command="{Binding ClassifyAs}" CommandParameter="todo">TODO</Button>
            <Button Command="{Binding ClassifyAs}" CommandParameter="copyright">Copyright</Button>
            <Button Command="{Binding ClassifyAs}" CommandParameter="code">Code</Button>
            <Button Command="{Binding SkipLine}">Skip</Button>
        </StackPanel>

        <TextBlock Text="{Binding CurrentLine}" FontSize="24"/>

    </DockPanel>
</Window>
